
.well
	.row
		.span2{ :style => 'text-align: center;' }
			= image_tag user.gravatar_url, :class => 'img-circle', :style => 'margin-bottom: 10px;'
			
			- if current_user and current_user == user
				= link_to 'Edit Profile', edit_user_path(current_user), :class => 'btn'
		
		.span9
			%h4
				= user.email
				-if user.city
					from
					= user.city
			-if user.bio
				%p
					= user.bio
